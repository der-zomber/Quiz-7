/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    bool isValidBST(TreeNode* root) {
        return validate(root, LONG_MIN, LONG_MAX);
    }
    bool validate(TreeNode* node, long minVal, long maxVal){
        // if the tree is empty then its a valid tree
        if (!node) return true;

        // checks if the current value breaks the BST rules
        if (node->val <= minVal || node->val >= maxVal) return false;

        // for the left subtree every node must be in between
        // minVal and node->val in order to be valid
        // for the right subtree every node must be in between
        // node->val and maxVal in order to be valid

        // then we check level by level using recursion, first checks 
        // if its in the allowed range, if it is them it recursively checks
        // the children updating the ranges
        // if its not in the allowed range then stops amd returns false
        return validate(node->left, minVal, node->val) &&
        validate(node->right,node->val, maxVal);
    }
};
